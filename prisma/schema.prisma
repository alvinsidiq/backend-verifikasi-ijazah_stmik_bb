generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  VALIDATOR
  MAHASISWA
}

model User {

   id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(MAHASISWA)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt 

   // relasi ke Mahasiswa (satu user hanya boleh punya satu data mahasiswa)
  mahasiswa    Mahasiswa?
  ijazahDiverifikasi Ijazah[] @relation("IjazahValidator")
}


model ProgramStudi {
  id        Int      @id @default(autoincrement())
  kodeProdi String   @unique
  namaProdi String
  jenjang   String   // contoh: "D3", "S1", "S2"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

    // relasi ke Mahasiswa
  mahasiswa Mahasiswa[]
} 


model Mahasiswa {
  id           Int          @id @default(autoincrement())
  userId       Int          @unique
  user         User         @relation(fields: [userId], references: [id])

  nim          String       @unique
  nama         String
  prodiId      Int
  prodi        ProgramStudi @relation(fields: [prodiId], references: [id])

  tahunMasuk   Int
  tahunLulus   Int?
  tempatLahir  String?
  tanggalLahir DateTime?

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  ijazah       Ijazah[]
}

model Ijazah {
  id             Int             @id @default(autoincrement())
  mahasiswaId    Int
  mahasiswa      Mahasiswa       @relation(fields: [mahasiswaId], references: [id])

  nomorIjazah    String          @unique
  tanggalLulus   DateTime
  fileUrl        String?

  statusValidasi StatusValidasi  @default(DRAFT)

  validatorId    Int?
  validator      User?           @relation("IjazahValidator", fields: [validatorId], references: [id])

  catatanValidasi String?
  validatedAt     DateTime?

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

   // ðŸ”— relasi ke BlockchainRecord (optional, 1-1)
  blockchainRecord BlockchainRecord?

  verificationLogs VerificationLog[]
}


model BlockchainRecord {
  id             Int           @id @default(autoincrement())
  ijazahId       Int           @unique
  ijazah         Ijazah        @relation(fields: [ijazahId], references: [id])

  ijazahHash     String        @unique
  contractAddress String?
  network        String
  txHash         String?
  blockNumber    Int?
  statusOnchain  StatusOnchain @default(DUMMY)
  explorerUrl    String?

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}


enum StatusValidasi {
  DRAFT
  MENUNGGU
  TERVALIDASI
  DITOLAK
}

enum StatusOnchain {
  DUMMY
  PENDING
  SUCCESS
  FAILED
}

enum VerifierType {
  MAHASISWA
  PERUSAHAAN
  ADMIN
  SYSTEM
}


model VerificationLog {
  id           Int          @id @default(autoincrement())
  ijazahId     Int
  ijazah       Ijazah       @relation(fields: [ijazahId], references: [id])

  verifierType VerifierType
  verifierInfo String?      // misal: nama perusahaan / IP address / catatan
  verifiedAt   DateTime     @default(now())
}
