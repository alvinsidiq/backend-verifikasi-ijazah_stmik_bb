generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  VALIDATOR
  MAHASISWA
}

model User {

   id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(MAHASISWA)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt 

   // relasi ke Mahasiswa (satu user hanya boleh punya satu data mahasiswa)
  mahasiswa    Mahasiswa?
}


model ProgramStudi {
  id        Int      @id @default(autoincrement())
  kodeProdi String   @unique
  namaProdi String
  jenjang   String   // contoh: "D3", "S1", "S2"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

    // relasi ke Mahasiswa
  mahasiswa Mahasiswa[]
} 


model Mahasiswa {
  id           Int          @id @default(autoincrement())
  userId       Int          @unique
  user         User         @relation(fields: [userId], references: [id])

  nim          String       @unique
  nama         String
  prodiId      Int
  prodi        ProgramStudi @relation(fields: [prodiId], references: [id])

  tahunMasuk   Int
  tahunLulus   Int?
  tempatLahir  String?
  tanggalLahir DateTime?

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}
